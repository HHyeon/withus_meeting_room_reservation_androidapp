<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/Action1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:drawable/ic_menu_manage"

        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

    <TextView
        android:id="@+id/logoview"
        android:background="@mipmap/logovga"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:scrollbars="vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:background="#CCCCCC"
        android:text="@string/maintitle"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        />
    <TextView
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/textview_summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#CCCCCC"
        />

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:columnCount="2"
        android:rowCount="2"
        >

        <Button
            android:enabled="false"
            android:onClick="MainBtnClick"
            android:id="@+id/Button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/addschedule" />

        <Button
            android:onClick="MainBtnClick"
            android:id="@+id/Button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/BookMRoom" />

        <Button
            android:enabled="false"
            android:onClick="MainBtnClick"
            android:id="@+id/Button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/MRoomCAM"/>

        <Button
            android:onClick="MainBtnClick"
            android:id="@+id/Button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/MRoomStatus"/>


    </GridLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>